@code {
    // Data
    private IEnumerable<Product> pagedProducts = new List<Product>();

    // Search
    private string? searchTerm;

    // Pagination state
    [Parameter]
    public int? page { get; set; } // from route /admin/products/{page}
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 1;
    private int totalItems = 0;

    // Modal state
    private bool showImageModal = false;
    private string? modalImageUrl;
    private string? modalProductName;

    protected override async Task OnParametersSetAsync()
    {
        currentPage = page.HasValue && page.Value > 0 ? page.Value : 1;
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        if (currentPage < 1) currentPage = 1;

        await using var db = await DbFactory.CreateDbContextAsync();

        // Important: Include Category so we can use product.Category?.Name
        IQueryable<Product> query = db.Products
                                      .Include(p => p.Category)
                                      .AsNoTracking();

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var pattern = $"%{searchTerm.Trim()}%";
            query = query.Where(p => EF.Functions.Like(p.Name, pattern));
        }

        query = query.OrderByDescending(p => p.Id);

        totalItems = await query.CountAsync();
        totalPages = Math.Max(1, (int)Math.Ceiling(totalItems / (double)pageSize));
        if (currentPage > totalPages) currentPage = totalPages;

        pagedProducts = await query
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToListAsync();
    }

    private async Task SearchProducts()
    {
        currentPage = 1;
        await LoadProducts();
    }

    private async Task ClearSearch()
    {
        searchTerm = null;
        currentPage = 1;
        await LoadProducts();
    }

    private async Task ChangePage(int pageNumber)
    {
        if (pageNumber < 1) pageNumber = 1;
        if (pageNumber > totalPages) pageNumber = totalPages;

        currentPage = pageNumber;
        Navigation.NavigateTo($"/admin/products/{currentPage}");
        await LoadProducts();
    }

    private async Task ConfirmDelete(int productId, string? productName)
    {
        if (!await ShowConfirm($"B·∫°n c√≥ ch·∫Øc mu·ªën xo√° s·∫£n ph·∫©m \"{productName}\"?")) return;
        await DeleteProduct(productId);
    }

    [Inject] private IJSRuntime JS { get; set; } = default!;
    private async Task<bool> ShowConfirm(string message)
    {
        try
        {
            return await JS.InvokeAsync<bool>("confirm", message);
        }
        catch
        {
            return false;
        }
    }

    private async Task DeleteProduct(int productId)
    {
        await using var db = await DbFactory.CreateDbContextAsync();
        var product = await db.Products.FindAsync(productId);
        if (product == null)
        {
            ToastSvc.ShowToast("Kh√¥ng t√¨m th·∫•y s·∫£n ph·∫©m.", ToastLevel.Warning);
            return;
        }

        if (product.StockQuantity > 1)
        {
            ToastSvc.ShowToast(
                $"‚ö†Ô∏è Kh√¥ng th·ªÉ xo√° s·∫£n ph·∫©m \"{product.Name}\" v√¨ c√≤n {product.StockQuantity} s·∫£n ph·∫©m trong kho.",
                ToastLevel.Warning
            );
            return;
        }

        db.Products.Remove(product);
        await db.SaveChangesAsync();

        ToastSvc.ShowToast($"‚úÖ ƒê√£ xo√° s·∫£n ph·∫©m \"{product.Name}\" th√†nh c√¥ng!", ToastLevel.Success);

        await LoadProducts();

        if (pagedProducts == null || !pagedProducts.Any())
        {
            if (currentPage > 1)
            {
                currentPage--;
                Navigation.NavigateTo($"/admin/products/{currentPage}");
                await LoadProducts();
            }
        }
    }

    private async Task ToggleVisibility(int productId)
    {
        await using var db = await DbFactory.CreateDbContextAsync();
        var product = await db.Products.FindAsync(productId);
        if (product == null)
        {
            ToastSvc.ShowToast("Kh√¥ng t√¨m th·∫•y s·∫£n ph·∫©m.", ToastLevel.Warning);
            return;
        }

        product.IsVisible = !product.IsVisible;
        db.Products.Update(product);
        await db.SaveChangesAsync();

        ToastSvc.ShowToast(
            product.IsVisible
                ? $"üëÅÔ∏è S·∫£n ph·∫©m \"{product.Name}\" ƒë√£ ƒë∆∞·ª£c hi·ªÉn th·ªã tr√™n website."
                : $"üôà S·∫£n ph·∫©m \"{product.Name}\" ƒë√£ ƒë∆∞·ª£c ·∫©n kh·ªèi website.",
            ToastLevel.Info
        );

        await LoadProducts();
    }

    // Modal helpers
    private Task OpenImageModal(Product p)
    {
        modalProductName = p.Name;
        modalImageUrl = !string.IsNullOrWhiteSpace(p.ImageUrl) ? p.ImageUrl : "/images/no-image.png";
        showImageModal = true;
        StateHasChanged();
        return Task.CompletedTask;
    }

    private Task CloseImageModal()
    {
        showImageModal = false;
        modalImageUrl = null;
        modalProductName = null;
        StateHasChanged();
        return Task.CompletedTask;
    }
}
