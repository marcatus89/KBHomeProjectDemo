@page "/admin/users"
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@inject UserManager<IdentityUser> UserManager

<h3>Qu·∫£n l√Ω Ng∆∞·ªùi d√πng</h3>

<a href="/admin/users/create" class="btn btn-primary mb-3">T·∫°o ng∆∞·ªùi d√πng m·ªõi</a>

<!-- THANH T√åM KI·∫æM -->
<div class="row mb-3">
    <div class="col-md-6">
        <input @bind="searchTerm" class="form-control" placeholder="Nh·∫≠p email ho·∫∑c t√™n ƒëƒÉng nh·∫≠p c·∫ßn t√¨m..." />
    </div>
    <div class="col-md-6">
        <button class="btn btn-primary me-2" @onclick="SearchUsers">T√¨m ki·∫øm</button>
        <button class="btn btn-secondary" @onclick="ClearSearch">X√≥a l·ªçc</button>
    </div>
</div>

@if (pagedUsers == null)
{
    <p><em>ƒêang t·∫£i danh s√°ch...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email / T√™n ƒëƒÉng nh·∫≠p</th>
                <th>H√†nh ƒë·ªông</th>
            </tr>
        </thead>
        <tbody>
            @if (pagedUsers.Any())
            {
                @foreach (var user in pagedUsers)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>
                            <a href="@($"admin/users/manage-roles/{user.Id}")" class="btn btn-sm btn-info">
                                Qu·∫£n l√Ω Quy·ªÅn
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="2" class="text-center text-muted">Kh√¥ng c√≥ ng∆∞·ªùi d√πng ph√π h·ª£p.</td></tr>
            }
        </tbody>
    </table>

    <!-- PH√ÇN TRANG -->
    @if (totalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Tr∆∞·ªõc</button>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(currentPage == i ? "active" : "")">
                        <button class="page-link" @onclick="() => ChangePage(i)">@i</button>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">Sau</button>
                </li>
            </ul>
        </nav>
    }
}

@code {
    private List<IdentityUser>? allUsers;
    private IEnumerable<IdentityUser>? pagedUsers;

    private string? searchTerm;

    // Ph√¢n trang
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        var query = UserManager.Users.AsQueryable();

        // üîç L·ªçc theo email ho·∫∑c username (n·∫øu c√≥ searchTerm)
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            query = query.Where(u =>
                u.Email.Contains(searchTerm) ||
                u.UserName.Contains(searchTerm));
        }

        // üìã L·∫•y to√†n b·ªô danh s√°ch (v√¨ UserManager kh√¥ng h·ªó tr·ª£ skip/take tr·ª±c ti·∫øp trong EF)
        allUsers = await query
            .OrderBy(u => u.Email)
            .ToListAsync();

        // üìÑ T√≠nh t·ªïng trang
        totalPages = (int)Math.Ceiling((double)allUsers.Count / pageSize);
        if (totalPages == 0) totalPages = 1;

        // üßÆ L·∫•y d·ªØ li·ªáu trang hi·ªán t·∫°i
        pagedUsers = allUsers
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToList();
    }

    private async Task SearchUsers()
    {
        currentPage = 1;
        await LoadUsers();
    }

    private async Task ClearSearch()
    {
        searchTerm = null;
        currentPage = 1;
        await LoadUsers();
    }

    private async Task ChangePage(int page)
    {
        currentPage = page;
        await LoadUsers();
    }
}
