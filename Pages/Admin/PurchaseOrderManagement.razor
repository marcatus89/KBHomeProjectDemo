@page "/admin/purchase-orders"
@attribute [Authorize(Roles = "Admin, Purchasing, Warehouse")]
@using Microsoft.EntityFrameworkCore
@using DoAnTotNghiep.Models
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager Navigation

<h3>Quản lý Đơn nhập hàng</h3>

<AuthorizeView Roles="Admin, Purchasing">
    <a href="/admin/purchase-orders/add" class="btn btn-primary mb-3">Tạo Đơn nhập hàng mới</a>
</AuthorizeView>

<!-- THANH TÌM KIẾM -->
<div class="row mb-3">
    <div class="col-md-4">
        <input @bind="searchTerm" class="form-control" placeholder="Tìm theo số phiếu, nhà cung cấp, trạng thái..." />
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary me-2" @onclick="SearchPurchaseOrders">Tìm kiếm</button>
        <button class="btn btn-secondary" @onclick="ClearSearch">Xóa lọc</button>
    </div>
</div>

@if (isLoading)
{
    <LoadingSpinner />
}
else if (pagedOrders == null || !pagedOrders.Any())
{
    <div class="alert alert-info mt-4">
        Không có đơn nhập hàng nào phù hợp.
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Số Phiếu</th>
                <th>Nhà cung cấp</th>
                <th>Ngày đặt hàng</th>
                <th>Trạng thái</th>
                <th>Xác nhận</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var po in pagedOrders)
            {
                <tr>
                    <td><strong>@po.PurchaseOrderNumber</strong></td>
                    <td>@po.Supplier?.Name</td>
                    <td>@po.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="badge @(po.Status == "Đã nhận hàng" ? "bg-success" : "bg-warning text-dark")">
                            @po.Status
                        </span>
                    </td>
                    <td>
                        <a href="@($"/admin/purchase-orders/{po.Id}")" class="btn btn-sm btn-info">
                            Xem/Nhận hàng
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- PHÂN TRANG -->
    @if (totalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Trước</button>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    var pageNum = i;
                    <li class="page-item @(pageNum == currentPage ? "active" : "")">
                        <button class="page-link" @onclick="() => ChangePage(pageNum)">@pageNum</button>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">Sau</button>
                </li>
            </ul>
        </nav>
    }
}

@code {
    private List<PurchaseOrder>? allOrders;
    private IEnumerable<PurchaseOrder>? pagedOrders;

    private string? searchTerm;

    // Phân trang
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 1;

    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadPurchaseOrders();
    }

    private async Task LoadPurchaseOrders()
    {
        isLoading = true;

        try
        {
            // Tạo DbContext mới cho mỗi lần load
            await using var db = await DbFactory.CreateDbContextAsync();

            var query = db.PurchaseOrders
                .Include(po => po.Supplier)
                .AsNoTracking()
                .AsQueryable();

            // tìm kiếm
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                var s = searchTerm.Trim().ToLower();
                query = query.Where(po =>
                    po.PurchaseOrderNumber.ToLower().Contains(s) ||
                    (po.Supplier != null && po.Supplier.Name.ToLower().Contains(s)) ||
                    po.Status.ToLower().Contains(s));
            }

            // lấy tất cả (để tính phân trang)
            allOrders = await query
                .OrderByDescending(po => po.OrderDate)
                .ToListAsync();

            totalPages = (int)Math.Ceiling((double)allOrders.Count / pageSize);
            if (totalPages == 0) totalPages = 1;
            if (currentPage < 1) currentPage = 1;
            if (currentPage > totalPages) currentPage = totalPages;

            pagedOrders = allOrders
                .Skip((currentPage - 1) * pageSize)
                .Take(pageSize)
                .ToList();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SearchPurchaseOrders()
    {
        currentPage = 1;
        await LoadPurchaseOrders();
    }

    private async Task ClearSearch()
    {
        searchTerm = null;
        currentPage = 1;
        await LoadPurchaseOrders();
    }

    private async Task ChangePage(int page)
    {
        if (page < 1) page = 1;
        currentPage = page;
        await LoadPurchaseOrders();
    }
}
